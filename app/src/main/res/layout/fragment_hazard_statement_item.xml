<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_hazard_statement_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_ecode"
        tools:text="H221" />

    <TextView
        android:id="@+id/tv_hazard_statement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/no_statement"
        tools:text="In contact with water releases flammable gases which may ignite spontaneously"
        android:layout_marginStart="8dp" />

</LinearLayout>
