<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grids_margin"
    android:layout_marginLeft="@dimen/grids_margin"
    android:layout_marginStart="@dimen/grids_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_code_category_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="E100-199"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/list_item_title_text_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="E100-199" />

        <TextView
            android:id="@+id/tv_code_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Colours"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/list_item_subtitle_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_code_category_range"
            app:layout_constraintStart_toStartOf="@+id/tv_code_category_range"
            app:layout_constraintTop_toBottomOf="@+id/tv_code_category_range"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Colours" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
