<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/grids_margin"
    android:layout_marginLeft="@dimen/grids_margin"
    android:layout_marginStart="@dimen/grids_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_code_detail_photo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_rect"
            android:contentDescription="@string/photo_of_ingredient_label"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/photo_protection"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_protection"
            app:layout_constraintBottom_toBottomOf="@+id/iv_code_detail_photo"
            app:layout_constraintEnd_toEndOf="@+id/iv_code_detail_photo"
            app:layout_constraintStart_toStartOf="@+id/iv_code_detail_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_code_detail_photo" />

        <TextView
            android:id="@+id/tv_code_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="@dimen/list_item_title_margin"
            android:layout_marginEnd="@dimen/list_item_title_margin"
            android:layout_marginLeft="@dimen/list_item_title_margin"
            android:layout_marginRight="@dimen/list_item_title_margin"
            android:layout_marginStart="@dimen/list_item_title_margin"
            android:layout_marginTop="@dimen/list_item_title_margin"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/list_item_big_title_size"
            app:layout_constraintBottom_toBottomOf="@+id/iv_code_detail_photo"
            app:layout_constraintEnd_toEndOf="@+id/iv_code_detail_photo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/iv_code_detail_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_code_detail_photo"
            app:layout_constraintVertical_bias="1.0"
            tools:text="E221" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
